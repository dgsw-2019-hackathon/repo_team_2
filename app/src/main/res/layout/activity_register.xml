<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".Page.activity.RegisterActivity">

    <ImageView
        android:id="@+id/registerLogo"
        android:layout_width="169dp"
        android:layout_height="137dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/logo_noText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/confirmRegister"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:background="@drawable/login_button_line"
        android:text="등록"
        android:textColor="#fff"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="150dp"
        tools:layout_editor_absoluteY="574dp" />

    <TextView
        android:id="@+id/registerIdText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="ID"
        android:textColor="#000"
        android:textSize="10pt"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="270dp" />

    <EditText
        android:id="@+id/userId"
        android:layout_width="260dp"
        android:layout_height="47dp"
        android:layout_marginStart="36dp"
        android:hint="ID"
        app:layout_constraintStart_toEndOf="@+id/registerIdText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="262dp" />

    <EditText
        android:id="@+id/userPassword"
        android:layout_width="276dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:hint="Password"
        app:layout_constraintStart_toEndOf="@+id/registerPwText"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="341dp" />

    <TextView
        android:id="@+id/registerPwText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:text="PW"
        android:textColor="#000"
        android:textSize="10pt"
        app:layout_constraintStart_toStartOf="@+id/registerIdText"
        app:layout_constraintTop_toBottomOf="@+id/registerIdText"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/registerEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAIL"
        android:textColor="#000"
        android:textSize="10pt"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="456dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/userEmail"
        android:layout_width="329dp"
        android:layout_height="47dp"
        android:hint="E-MAIL"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="495dp" />


</androidx.constraintlayout.widget.ConstraintLayout>